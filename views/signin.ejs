    <style>
        .alert {
          padding: 15px;
          background-color: #f44336;
          color: white;
          opacity: 1;
        transition: opacity 0.6s; /* 600ms to fade out */
        }

        .closebtn {
          margin-left: 15px;
          color: white;
          font-weight: bold;
          float: right;
          font-size: 22px;
          line-height: 15px;
          cursor: pointer;
          transition: 0.3s;
        }

        .closebtn:hover {
          color: black;
        }
        </style>
</head>
<body>
